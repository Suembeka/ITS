<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 


<hibernate-mapping>
    <class name="entity.Station" table="stations">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="string"/>
        <property column="latlng" name="latlng" type="string"/>
        <property name="type" column="type" type="integer" />
        <set name="associations" lazy="false">
            <key column="station_id"/>
            <one-to-many class="entity.StationAssociation"/>
        </set>
    </class>
</hibernate-mapping>
