<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    <class name="entity.Driver" table="drivers">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="string"/>
    </class>
</hibernate-mapping>

<hibernate-mapping>
    <class name="entity.Route" table="routes">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="string"/>
        <many-to-one name="type" column="type_id" unique="false" class="entity.RouteType" not-null="true" />
        <set name="associations" lazy="false">
            <key column="route_id"/>
            <one-to-many class="entity.StationAssociation"/>
        </set>
    
    </class>
</hibernate-mapping>

<hibernate-mapping>
    <class name="entity.RouteType" table="route_types">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="string"/>
        <property column="payment_amount" name="paymentAmount" type="int"/>
    </class>
</hibernate-mapping>

<hibernate-mapping>
    <class name="entity.Station" table="stations">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="string"/>
        <many-to-one name="type" column="type_id" unique="false" class="entity.StationType" not-null="true" />
        <property column="latlng" name="latLng" type="string"/>
        <set name="associations" lazy="false">
            <key column="station_id"/>
            <one-to-many class="entity.StationAssociation"/>
        </set>
    </class>
</hibernate-mapping>

<hibernate-mapping>
    <class name="entity.StationType" table="route_types">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="string"/>
    </class>
</hibernate-mapping>

<hibernate-mapping>
    <class name="entity.StationAssociation" table="routes_stations">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="stationByOrder" name="station_by_order" type="int"/>
    </class>
</hibernate-mapping>