<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
    
    <class name="entity.Driver" table="drivers">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="string"/>
    </class>
    
    <class name="entity.TransportType" table="transport_types">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="name" name="name" type="string"/>
    </class>
    
    <class name="entity.Transport" table="transports">
        <id column="id" name="id" type="integer">
            <generator class="increment"/>
        </id>
        <property column="transport_gov_num" name="govNumber" type="string"/>
        <many-to-one name="type" column="type_id" unique="false" class="entity.TransportType" not-null="true" />
        <many-to-one name="driver" column="driver_id" unique="true" class="entity.Driver" not-null="true" />  
    </class>
    
    
    
    
    
</hibernate-mapping>